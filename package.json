{
  "name": "node-red-contrib-homekit-bridged",
  "version": "1.2.0-dev.3",
  "description": "Node-RED nodes to simulate Apple HomeKit devices.",
  "main": "build/homekit.js",
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf build/lib build/**/*.js",
    "test": "mocha -r ts-node/register './src/**/*.test.js' --exit",
    "fix": "eslint --fix \"src/**/*.js\"",
    "lint": "eslint \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged"
  },
  "keywords": [
    "homekit",
    "hap-nodejs",
    "node-red",
    "iot",
    "homebridge",
    "home",
    "NRCHKB"
  ],
  "node-red": {
    "nodes": {
      "homekit": "build/homekit.js"
    }
  },
  "author": {
    "name": "Shaquu",
    "email": "shaquu.github@gmail.com"
  },
  "contributors": [
    "Marius Schmeding",
    "Oliver Rahner"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged/issues"
  },
  "homepage": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged#readme",
  "dependencies": {
    "debug": "^4.1.1",
    "hap-nodejs": "^0.7.7"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.7",
    "@types/mocha": "^7.0.2",
    "@types/node": "^10.17.26",
    "@types/node-red": "^0.20.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "node-red": "^1.1.1",
    "node-red-node-test-helper": "^0.2.5",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "prettier/prettier": "off",
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-prototype-builtins": "off"
    }
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "/build"
  ]
}
